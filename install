#!/usr/bin/env bash

set -e

echo "What is first your name:"
read firstName

echo "What is your last name:"
read lastName

echo "What is your git email:"
read email

DEFAULT_CONFIG_PREFIX="default"
CONFIG_SUFFIX=".conf.yaml"
DOTBOT_DIR="dotbot"

DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
git -C "${DOTBOT_DIR}" submodule sync --quiet --recursive
git submodule update --init --recursive "${DOTBOT_DIR}"

for conf in ${@} ${DEFAULT_CONFIG_PREFIX}; do
  case $conf in
    mac | default | wsl)
      "${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" -c "${conf}${CONFIG_SUFFIX}" --plugin-dir "dotbot-aptget"
      ;;

    *)
      sudo "${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" -c "${conf}${CONFIG_SUFFIX}" --plugin-dir "dotbot-aptget"
      ;;
  esac
done

git config --global user.name "$firstName $lastName"
git config --global user.email $email

echo "Restart your terminal..."

